import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt(); 
        int a = sc.nextInt(); 
        int b = sc.nextInt(); 
        
        int positions = n - a - b;
        
        if (positions < 0) {
            positions = 0; 
        }
        
        System.out.println(positions);
        
        sc.close();
    }
}
